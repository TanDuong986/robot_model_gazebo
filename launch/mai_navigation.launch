<launch>
  <!-- Arguments -->
    <arg name="map_file" default="$(find robot_model_gazebo)/map/map.yaml"/>
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="true"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
    		<arg name="use_sim_time" value="true"/>
    		<arg name="debug" value="false"/>
			<arg name="gui" value="true"/>
		<arg name="world_name" value="$(find robot_model_gazebo)/worlds/complete.world"/>
  	</include>

  <!-- robot-->
  <!--arg name="model" /-->
    <param name="robot_description" command="$(find xacro)/xacro '$(find robot_model_gazebo)/urdf/robot_model_gazebo.xacro'" />
    <node pkg="joint_state_publisher" name="joint_state_publisher"  type="joint_state_publisher" ></node>
    <!--node pkg="robot_state_publisher" name="robot_state_publisher"  type="state_publisher" output="screen" -->
    <node pkg="robot_state_publisher" name="robot_state_publisher"  type="robot_state_publisher" output="screen" >
        <param name="publish_frequency" type="double" value="20.0" />
    </node>
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -z 0.1 -model robot_model" respawn="false" output="screen"/>
  <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find robot_model_gazebo)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find robot_model_gazebo)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find robot_model_gazebo)/rviz/navigation.rviz"/>
  </group>
</launch>

